<h3 class="mt-3">Question List</h3>

<%= link_to  new_question_path, class: "btn btn-primary mt-3" do %>
  <i class="fa fa-file-o mr-2"></i>
  Create New Question
<% end %>
<div class="table-responsive mt-4">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Question</th>
        <th>Answer</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each_with_index do |question, i| %>
        <tr>
          <td><%= i %></td>
          <td><%= question.content %></td>
          <td><%= question.answer %></td>
          <td>
            <%= link_to edit_question_path(question), class: "btn btn-primary" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
